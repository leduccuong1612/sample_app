<% provide :title, t(".title") %>
<h1><%= t ".header" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: @user %>

      <%= f.label t(".name") %>
      <%= f.text_field t(".name"), class: "form-control" %>

      <%= f.label t(".email") %>
      <%= f.email_field t(".email"), class: "form-control" %>

      <%= f.label t(".password") %>
      <%= f.password_field t(".password"), class: "form-control" %>

      <%= f.label t(".password_confirmation"), t(".password_confirmation") %>
      <%= f.password_field t(".password_confirmation"), class: "form-control" %>

      <%= f.submit t(".save"), class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change"), Settings.link.gravatar %>
    </div>
  </div>
</div>
